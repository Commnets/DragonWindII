		<!-- 7: Again, keep the situation for a distance -->
		<Step type="8">
			<Variable id="Point" value="1536,-1,-1"/> 
			<Variable id="Distance" value="6"/> 
		</Step>
		
		<!-- 8: Stands nothing finally  -->
		<Step type="50000">
			<Variable id="Type" value="0"/> 
			<Variable id="Direction" value="0"/> 
			<Variable id="Seconds" value="0.0"/>
		</Step>
